#include <stdio.h>

int main() {
    int limite;


    printf("Digite o limite superior para números pares: ");
    scanf("%d", &limite);

    printf("Números pares de 1 até %d:\n", limite);
    for (int i = 1; i <= limite; i++) {
        if (i % 2 == 0) {
            printf("%d ", i);
        }
    }
    printf("\n");


    printf("Digite o limite superior para números ímpares: ");
    scanf("%d", &limite);


    printf("Números ímpares de 1 até %d:\n", limite);
    for (int i = 1; i <= limite; i++) {
        if (i % 2 != 0) {
            printf("%d ", i);
        }
    }
    printf("\n");

    return 0;
}
