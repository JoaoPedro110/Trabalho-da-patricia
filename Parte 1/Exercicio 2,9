#include <stdio.h>

int main() {
    int num1, num2;


    printf("Digite o primeiro número: ");
    scanf("%d", &num1);
    printf("Digite o segundo número: ");
    scanf("%d", &num2);


    printf("\nOperações matemáticas\n");
    printf("Soma: %d\n", num1 + num2);
    printf("Subtração: %d\n", num1 - num2);
    printf("Multiplicação: %d\n", num1 * num2);

    if (num2 != 0) {
        printf("Divisão: %.2f\n", (float)num1 / num2);
    } else {
        printf("Divisão: Não é possível dividir por zero.\n");
    }

    if (num1 == num2) {
        printf("Os números são iguais.\n");
    } else if (num1 > num2) {
        printf("O primeiro número (%d) é maior.\n", num1);
    } else {
        printf("O segundo número (%d) é maior.\n", num2);
    }

    return 0;
}
